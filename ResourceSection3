import React from 'react';
import { Box, Tooltip, Zoom, styled } from '@mui/material';
import { AutoAwesome, Psychology, SmartToy } from '@mui/icons-material';

// Styled component with pulsing animation
const PulseIcon = styled(Box)(({ theme }) => ({
  display: 'inline-flex',
  alignItems: 'center',
  justifyContent: 'center',
  borderRadius: '50%',
  padding: theme.spacing(1),
  backgroundColor: theme.palette.primary.light,
  color: theme.palette.primary.contrastText,
  boxShadow: theme.shadows[3],
  animation: 'pulse 2s infinite',
  cursor: 'pointer',
  transition: 'all 0.3s ease',
  '&:hover': {
    transform: 'scale(1.1)',
    backgroundColor: theme.palette.primary.main,
  },
  '@keyframes pulse': {
    '0%': {
      boxShadow: `0 0 0 0 ${theme.palette.primary.light}80`,
    },
    '70%': {
      boxShadow: `0 0 0 10px ${theme.palette.primary.light}00`,
    },
    '100%': {
      boxShadow: `0 0 0 0 ${theme.palette.primary.light}00`,
    },
  },
}));

// Alternative version with gradient background
const GradientIcon = styled(Box)(({ theme }) => ({
