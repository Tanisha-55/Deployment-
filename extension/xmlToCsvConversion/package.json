{
  "name": "xml-to-csv-lineage",
  "displayName": "XML to CSV Lineage with Copilot",
  "description": "Generate lineage CSV files from XML using Copilot agent mode",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xml-to-csv-lineage.generateLineage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xml-to-csv-lineage.generateLineage",
        "title": "Generate Lineage CSV from XML"
      }
    ],
    "configuration": {
      "title": "XML to CSV Lineage",
      "properties": {
        "xmlToCsvLineage.xmlFolderPath": {
          "type": "string",
          "default": "informatica",
          "description": "Relative path to the folder containing XML files"
        },
        "xmlToCsvLineage.instructionsPath": {
          "type": "string",
          "default": "instructions.md",
          "description": "Relative path to the instructions markdown file"
        },
        "xmlToCsvLineage.outputFolder": {
          "type": "string",
          "default": "output",
          "description": "Relative path for the output CSV files"
        },
        "xmlToCsvLineage.maxConcurrent": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of concurrent Copilot requests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fast-xml-parser": "^4.2.5"
  }
}
